load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = ["blob.go"],
    importmap = "k8s.io/test-infra/vendor/github.com/google/go-cloud/blob",
    importpath = "github.com/google/go-cloud/blob",
    visibility = ["//visibility:public"],
    deps = ["//vendor/github.com/google/go-cloud/blob/driver:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//vendor/github.com/google/go-cloud/blob/driver:all-srcs",
        "//vendor/github.com/google/go-cloud/blob/gcsblob:all-srcs",
        "//vendor/github.com/google/go-cloud/blob/s3blob:all-srcs",
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
